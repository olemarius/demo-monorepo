
{
    "$schema": "https://turbo.build/schema.json",  
    "pipeline": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**"]
        },
        "@bloc/bloc-components#build": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**"]
        },
        "@bloc/frontend#build": {
          "dependsOn": ["@bloc/bloc-components#build"],
          "outputs": ["dist/**"]
        },
        "@bloc/admin#build": {
            "dependsOn": ["@bloc/bloc-components#build"],
            "outputs": [".dist/**"]
        },
        "lint": {},
        "deploy": {
          "dependsOn": ["build", "lint"]
        }
      }
}